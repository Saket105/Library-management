<!-- include header -->
<%- include('include/_header')%>
<!-- include header -->

<!-- Main Site -->

<main id="site-main">
  <div class="container1">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All Books</a>
      </div>
    </div>

    <div class="form-title text-centre">
      <h2 class="text-dark">Update Book</h2>
      <span class="text-light">Use the below form to update your book</span>
    </div>

    <!-- Add User Form -->
    <!-- form handling -->
    <form method="post" id="update_book">
      <div class="new_book">
        <div class="form-group">
          <label for="Name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%=book._id%>" />
          <input
            type="text"
            name="name"
            value="<%=book.name%>"
            placeholder="Enter book name"
          />
        </div>

        <div class="form-group">
          <label for="Author" class="text-light">Author Name</label>
          <input
            type="text"
            name="author"
            value="<%=book.author%>"
            placeholder="Enter author name"
          />
        </div>

        <div class="form-group">
          <label for="Gener" class="text-light">Gener</label>
          <input
            type="text"
            name="gener"
            value="<%=book.gener%>"
            placeholder="Enter Gener"
          />
        </div>

        <div class="form-group">
          <label for="Edition" class="text-light">Edition</label>
          <input
            type="text"
            name="edition"
            value="<%=book.edition%>"
            placeholder="Enter Edition"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- Main Site -->

<!-- include footer -->
<%- include('include/_footer')%>
<!-- include footer -->
